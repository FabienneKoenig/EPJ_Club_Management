<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content" class="pt-4">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Profil</h1>
                <button class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm" id="editProfile">
                    <i class="fas fa-edit fa-sm text-white-50"></i> Bearbeiten
                </button>
            </div>

            <!-- Content Row -->
            <div class="row">

                <div class="col-xl-4 col-md-8">
                    <div class="img mx-auto">
                        <img src="../views/img/jane_doe.png" class="img-fluid rounded d-block mx-auto" style="width: 75%;" alt="Jane Doe Profile Picture">
                    </div>

                </div>

                <div class="col-xl-8 col-md-8">
                    <div id="profileCard">
                        <h1>Jane Doe, <span id="age">28</span></h1>

                        <div class="lead">
                            <i class="fas fa-map-marker-alt"></i><span id="addressConcat"> Oberseestrasse 10, 8640 Rapperswil SG</span>
                        </div>

                        <div class="lead">
                            <i class="fas fa-envelope"></i><span id="email"> jane.doe@loremipsum.com</span>
                        </div>

                        <div class="lead">
                            <i class="fas fa-phone"></i><span id="phone"> +41 81 756 11 11</span>
                        </div>

                        <div class="lead">
                            <i class="fas fa-birthday-cake"></i><time id="birthday" datetime="1991-01-01"> 01.01.1991</time>
                        </div>
                    </div>

                    <div id="profileForm" style="display: none;">
                        <form class="form-horizontal" >
                            <fieldset>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="surnameInput">Vorname</label>
                                    <div class="col-xl-8 col-md-8">
                                        <input id="surnameInput" name="surname" type="text" placeholder="Vorname" value="Jane" class="form-control input-md">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="nameInput">Nachname</label>
                                    <div class="col-xl-8 col-md-8">
                                        <input id="nameInput" name="name" type="text" placeholder="Nachname" value="Doe" class="form-control input-md">

                                    </div>
                                </div>

                                <!-- Date picker -->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="birthdayInput">Geburtstag</label>
                                    <div class="col-xl-8 col-md-8">
                                        <input id="birthdayInput" name="street" type="date" placeholder="01.01.2019"  value="1991-01-01" class="form-control input-md">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="emailInput">E-Mail Adresse</label>
                                    <div class="col-xl-8 col-md-8">
                                        <input id="emailInput" name="email" type="email" placeholder="E-Mail Adresse" value="jane.doe@loremipsum.com" class="form-control input-md">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="phoneInput">Telefonnummer</label>
                                    <div class="col-xl-8 col-md-8">
                                        <input id="phoneInput" name="phone" type="tel" placeholder="Telefonnummer" value="+41 81 756 00 00" class="form-control input-md">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="streetInput">Strasse</label>
                                    <div class="col-xl-8 col-md-8">
                                        <input id="streetInput" name="street" type="text" placeholder="Strasse" value="Oberseestrasse 10" class="form-control input-md">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-xl-4 col-md-8 control-label" for="cityInput">Stadt / PLZ</label>
                                    <div class="row form-group" >
                                        <div class="col-xl-4 col-md-4">
                                            <input id="cityInput" name="city" type="text" placeholder="Stadt" value="Rapperswil" class="form-control input-md">
                                        </div>
                                        <div class="col-xl-3 col-md-4">
                                            <input id="zipINput" name="zip" type="text" placeholder="PLZ" value="8640" class="form-control input-md">
                                        </div>
                                    </div>
                                </div>

                                <!-- File input: hidden-->
                                <div class="form-group" hidden>
                                    <label class="col-xl-8 col-md-8 control-label" for="profileImageInput">Profilbild</label>
                                    <div class="row form-group">
                                        <div class="col-xl-8 col-md-8">
                                            <input id="profileImageInput" name="profileImage" type="file" class="form-control input-md">
                                        </div>
                                    </div>
                                </div>

                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-xl-8 col-md-8 control-label" for="saveProfileEdit"></label>
                                    <div class="col-md-8">
                                        <button id="saveProfileEdit" name="save" class="btn btn-primary">Speichern</button>
                                        <button id="cancelProfileEdit" name="cancel" class="btn btn-secondary">Abbrechen</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>

                </div>
            </div>


        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

</div>
<!-- End of Content Wrapper -->

<!-- Page level custom scripts -->
<script src="../views/js/userprofile.js"></script>
